/* 导入 Tailwind CSS */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* 自定义 CSS 变量 */
:root {
	/* 默认颜色 */
	--color-primary: #3498db;
	--color-secondary: #2980b9;
	--color-accent: #74b9ff;
	--color-pos: rgb(52,152,219);
	--color-correct: rgb(46,204,113);
	--color-error: rgb(231,76,60);
	--color-answer: rgb(155,89,182);
	
	/* 界面颜色 */
	--app-bg-color: #f0f8ff;
	--main-bg-color: #ffffff;
	--text-color: #1a202c;
	--card-bg-color: #ffffff;
	--border-color: #e2e8f0;
}

/* 深色模式 */
.dark {
	--app-bg-color: #0f141a;
	--main-bg-color: #0f141a;
	--text-color: #f7fafc;
	--card-bg-color: #1a202c;
	--border-color: #2d3748;
}

/* 基础样式 */
* {
	box-sizing: border-box;
}

html {
	height: 100%;
	font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

body {
	height: 100%;
	margin: 0;
	padding: 0;
	background-color: var(--app-bg-color);
	color: var(--text-color);
	transition: background-color 0.3s ease, color 0.3s ease;
}

#app {
	height: 100%;
	display: flex;
	flex-direction: column;
}

/* 自定义组件样式 */
@layer components {
	/* 卡片样式 */
	.card {
		@apply bg-card-bg-color rounded-xl border border-gray-300 shadow-card transition-all duration-300;
		background-color: var(--card-bg-color);
		border-color: var(--border-color);
	}

	.card:hover {
		@apply shadow-card-hover transform -translate-y-1;
	}

	/* 按钮样式 */
	.btn {
		@apply px-4 py-2 rounded-lg font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2;
	}

	.btn-primary {
		@apply bg-blue-500 text-white hover:bg-blue-600 focus:ring-blue-500;
		background-color: var(--color-primary);
	}

	.btn-primary:hover {
		background-color: var(--color-secondary);
	}

	.btn-secondary {
		@apply bg-gray-200 text-gray-800 dark:bg-gray-700 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-600 focus:ring-gray-500;
	}

	.btn-success {
		@apply bg-green-500 text-white hover:bg-green-600 focus:ring-green-500;
	}

	.btn-danger {
		@apply bg-red-500 text-white hover:bg-red-600 focus:ring-red-500;
	}

	/* 输入框样式 */
	.input {
		@apply w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200;
	}

	.input:disabled {
		@apply opacity-50 cursor-not-allowed;
	}

	/* 进度条样式 */
	.progress-bar {
		@apply w-full bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden;
	}

	.progress-fill {
		@apply h-2 bg-blue-500 transition-all duration-500 ease-out;
		background-color: var(--color-primary);
	}

	/* 标签样式 */
	.tag {
		@apply inline-flex items-center px-2 py-1 rounded-full text-xs font-medium;
	}

	.tag-pos {
		@apply bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200;
		color: var(--color-pos);
	}

	.tag-correct {
		@apply bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200;
	}

	.tag-error {
		@apply bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200;
	}

	/* 动画样式 */
	.fade-enter-active,
	.fade-leave-active {
		transition: opacity 0.3s ease;
	}

	.fade-enter-from,
	.fade-leave-to {
		opacity: 0;
	}

	.slide-up-enter-active,
	.slide-up-leave-active {
		transition: all 0.3s ease-out;
	}

	.slide-up-enter-from {
		opacity: 0;
		transform: translateY(10px);
	}

	.slide-up-leave-to {
		opacity: 0;
		transform: translateY(-10px);
	}

	/* 特殊效果 */
	.glass-effect {
		@apply backdrop-blur-md bg-white/80 dark:bg-gray-800/80 border border-white/20 dark:border-gray-700/20;
	}

	.text-gradient {
		background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
}

/* 响应式设计 */
@layer utilities {
	.container-custom {
		@apply container mx-auto px-4 max-w-6xl;
	}

	@media (max-width: 640px) {
		.container-custom {
			@apply px-3;
		}
	}
}

/* 打印样式 */
@media print {
	.btn,
	.app-header {
		display: none !important;
	}

	.card {
		box-shadow: none !important;
		border: 1px solid #ccc !important;
	}
}