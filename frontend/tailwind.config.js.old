import { ThemeConfig } from './settings/theme.config.js'

// 生成动态颜色配置
const generateColorConfig = () => {
	const colors = {}
	Object.entries(ThemeConfig.colorThemes).forEach(([themeName, theme]) => {
		colors[themeName] = {
			primary: theme.primary,
			secondary: theme.secondary,
			accent: theme.accent
		}
	})
	return colors
}

